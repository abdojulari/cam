server {
       listen 80;
       #listen [::]:81;

       server_name cre-dev.epl.ca;
       # Redirect all HTTP traffic to HTTPS
       return 301 https://$host$request_uri;

       root /var/www/cre/public;
       index index.php index.html index.htm;

        # Make sure both /api/ and /oauth/ routes are handled
       location /api/ {
              try_files $uri $uri/ /index.php?$query_string;
       }

       location /oauth/ {
              try_files $uri $uri/ /index.php?$query_string;
       }

       location / {
	       try_files $uri $uri/ /index.php?$query_string;
       }

       location ~ \.php$ {
	       include snippets/fastcgi-php.conf;
               fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
               fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
               include fastcgi_params;
       }

       location ~ /\.ht {
              deny all;
       }

       error_log  /var/log/nginx/cre_error.log;
       access_log /var/log/nginx/cre_access.log;
}

server {
       listen 443 ssl;

       server_name cre-dev.epl.ca;
       ssl_certificate /etc/ssl/certs/epl-wild2025.crt;
       ssl_certificate_key /etc/ssl/private/epl-wild2025.key;

       # Improve SSL Security (optional but recommended)
       #ssl_protocols TLSv1.2 TLSv1.3;  # Disable old protocols
       #ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
       #ssl_prefer_server_ciphers on;

       # Enable SSL for your domain

       root /var/www/cre/public;
       index index.php index.html index.htm;

       # Make sure both /api/ and /oauth/ routes are handled
       location /api/ {
           try_files $uri $uri/ /index.php?$query_string;
       }

       location /oauth/ {
           try_files $uri $uri/ /index.php?$query_string;
       }

       # Default catch-all for the rest of the app
       location ~ \.php$ {
           include snippets/fastcgi-php.conf;
           fastcgi_pass unix:/var/run/php/php8.3-fpm.sock;
           fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
           include fastcgi_params;
       }

       # Deny access to .htaccess files
       location ~ /\.ht {
           deny all;
       }

       # Logs
       error_log  /var/log/nginx/cre_error.log;
       access_log /var/log/nginx/cre_access.log;
}